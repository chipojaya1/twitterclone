<%= form_with(model: @blog, if action_name == 'new' url: confirm_blogs_path else blog_path end ) do |form| %>
  <div clas="field"
    <div class="container">
      <%= form.text_field :content, wrapper: false, placeholder:  "Compose new blog tweet...", size: "37x8" %>
    </div>
  </div>
  <%= form.submit %>
<% end %>
