<%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %>cannot send due to error</h2>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="blog_title">
    <%= form.label :tweet %>
    <%= form.text_field :tweet %>
  </div>
  <div class="blog_content">
    <%= form.label :post %>
    <%= form.text_field :post %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to "top", blogs_path %>
